@model Actor

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this)" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Nombres, null, new { @class = "control-label" })
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-font"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.Nombres, null, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.Nombres, null, new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Apellidos, null, new { @class = "control-label" })
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-font"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.Apellidos, null, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.Apellidos, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>                      

            <div class="form-group">
                @Html.LabelFor(x => x.Edad, null, new { @class = "control-label" })
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">#</span>
                    </div>
                    @Html.TextBoxFor(x => x.Edad, null, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(x => x.Edad, null, new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-md-12">
                    <input type="submit" value="Enviar" class="btn btn-primary btn-block" />

                </div>
            </div>

        </form>
    </div>
</div>
